filetype plugin indent on
" show existing tab with 3 spaces width
set tabstop=3
" when indenting with '>', use 3 spaces width
set shiftwidth=3
" On pressing tab, insert 3 spaces
set expandtab
set number relativenumber
set scrolloff=10
colorscheme elflord
set colorcolumn=80
highlight ColorColumn ctermbg=DarkGray
